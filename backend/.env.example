# Database
DATABASE_URL="postgresql://usuario:password@localhost:5432/exmc_db"

# JWT
JWT_SECRET="tu_clave_secreta_super_segura_aqui_cambiar_en_produccion"
JWT_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# ====================================
# AFIP - FACTURACIÓN ELECTRÓNICA
# ====================================
# ⚠️ IMPORTANTE: Completar estos datos cuando tengas los certificados de AFIP

# CUIT de la empresa (formato: 20123456789)
AFIP_CUIT=20123456789

# Entorno AFIP: 'testing' o 'production'
AFIP_ENVIRONMENT=testing

# Ruta al certificado (.crt)
AFIP_CERT_PATH=./certs/testing/certificate.crt

# Ruta a la clave privada (.key)
AFIP_KEY_PATH=./certs/testing/private_key.key

# Password del certificado (opcional, dejar vacío si no tiene)
AFIP_CERT_PASSPHRASE=

# Punto de venta habilitado en AFIP
AFIP_PUNTO_VENTA=1

# ====================================
# MERCADO PAGO - COBROS ONLINE
# ====================================
# ⚠️ Obtener credenciales en: https://www.mercadopago.com.ar/developers

# Access Token (Backend) - Testing: TEST-*, Producción: APP_USR-*
MERCADOPAGO_ACCESS_TOKEN=TEST-YOUR_ACCESS_TOKEN_HERE

# Public Key (Frontend) - Testing: TEST-*, Producción: APP_USR-*
MERCADOPAGO_PUBLIC_KEY=TEST-YOUR_PUBLIC_KEY_HERE

# URLs de retorno
MERCADOPAGO_SUCCESS_URL=http://localhost:5173/ventas/payment-success
MERCADOPAGO_FAILURE_URL=http://localhost:5173/ventas/payment-failure
MERCADOPAGO_PENDING_URL=http://localhost:5173/ventas/payment-pending

# URL de webhook (Backend)
MERCADOPAGO_WEBHOOK_URL=http://localhost:3001/api/payments/webhook

# ====================================
# EMAIL (Para enviar facturas)
# ====================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASSWORD=tu-password-de-aplicacion
SMTP_FROM=Sistema EXMC <noreply@exmc.com>
