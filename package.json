{
  "name": "exmc-sistema",
  "productName": "Sistema EXMC",
  "version": "1.0.0",
  "description": "Sistema de Gestión Comercial - Aplicación de Escritorio",
  "main": "electron/main.js",
  "author": {
    "name": "Luciano Savoretti",
    "role": "Dev / Sistemas / Web",
    "instagram": "https://www.instagram.com/devpuchito/"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "electron:dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build:all && electron-builder",
    "electron:build:win": "npm run build:all && electron-builder --win",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:all": "npm run build:backend && npm run build:frontend",
    "postinstall": "cd backend && npm install && cd ../frontend && npm install"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.exmc.sistema",
    "productName": "Sistema EXMC",
    "copyright": "Copyright © 2025 Luciano Savoretti",
    "directories": {
      "output": "dist-electron",
      "buildResources": "electron/assets"
    },
    "files": [
      "electron/**/*",
      "backend/dist/**/*",
      "backend/node_modules/**/*",
      "backend/package.json",
      "backend/prisma/**/*",
      "frontend/dist/**/*",
      "!**/*.ts",
      "!**/*.map"
    ],
    "extraResources": [
      {
        "from": "postgres-portable",
        "to": "postgres",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "electron/assets/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Sistema EXMC",
      "installerIcon": "electron/assets/icon.ico",
      "uninstallerIcon": "electron/assets/icon.ico",
      "installerHeaderIcon": "electron/assets/icon.ico",
      "deleteAppDataOnUninstall": false,
      "perMachine": false,
      "allowElevation": true,
      "displayLanguageSelector": false,
      "installerLanguages": [
        "es_ES"
      ],
      "language": "es_ES"
    },
    "publish": null
  }
}
